{
  "name": "@vigilo/vue",
  "version": "0.0.12",
  "description": "Vue bindings for Vigilo task awareness overlay",
  "author": "Remco Stoeten",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
