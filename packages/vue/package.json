  },
  "peerDependencies": {
    "vue": ">=3.4.0"
  },
  "dependencies": {
    "@vigilo/core": "^0.0.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.13"
  },
  "engines": {
    "node": ">=18"
  }
}