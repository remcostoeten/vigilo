{
  "name": "@remcostoeten/vigilo",
  "version": "0.1.0",
  "description": "A lightweight task awareness overlay for development environments",
  "author": "Remco Stoeten",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remcostoeten/vigilo.git"
  },
  "keywords": [
    "todo",
    "focus",
    "overlay",
    "developer-tools",
    "awareness"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.mjs",
      "require": "./dist/vue/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist packages/*/dist",
    "build:packages": "npm run build --workspaces --if-present",
    "dev:packages": "npm run dev --workspaces --if-present",
    "docs": "bunx fumadocs build",
    "docs:dev": "bunx fumadocs dev"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "vue": ">=3.4.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "fumadocs": "^0.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.13"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0"
}
