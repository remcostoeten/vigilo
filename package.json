{
  "name": "vigilo-monorepo",
  "version": "0.0.12",
  "description": "A lightweight task awareness overlay for development environments",
  "author": "Remco Stoeten",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remcostoeten/vigilo.git"
  },
  "keywords": [
    "todo",
    "focus",
    "overlay",
    "developer-tools",
    "awareness"
  ],
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces",
    "example:react": "npm run dev --workspace=vigilo-react-example",
    "example:vue": "npm run dev --workspace=vigilo-vue-example"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "vue": "^3.5.13",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0"
}